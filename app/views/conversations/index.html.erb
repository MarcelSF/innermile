
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user" aria-selected="true">User</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="business-tab" data-toggle="tab" href="#business" role="tab" aria-controls="business" aria-selected="false">Business</a>
  </li>
</ul>
<div class="conversation_list">
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="user-tab">
      <div class="container col-6">
        <div class="messages">

            <h2>Your Chats with businesses</h2>
            <% @conversations.each do |conversation| %>
            <%= link_to conversation_path(conversation) do %>
              <div class="card-product">
                <%= cl_image_tag(conversation.business.avatar.key) %>
                <div class="card-product-infos">
                  <h2><%= conversation.business.name %></h2>
                  <p><%= conversation.business.short_bio %></p>
                </div>
              </div>
              <% end  %>
              <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="business" role="tabpanel" aria-labelledby="business-tab">
      <div class="container col-6">
        <div class="messages">
          <h2>Customer Enquiries</h2>
          <div class= "row justify-content-center">
           <% @business_conversations.each do |conversation| %>
            <%= link_to conversation_path(conversation) do %>
              <div class="card-product">
                <%= cl_image_tag(conversation.business.avatar.key) %>
                <div class="card-product-infos">
                  <h2><%= conversation.business.name %></h2>
                  <p><%= conversation.business.short_bio %></p>
                </div>
              </div>
              <% end  %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="conversation_content">
    <% if @conversation  %>
    <%= render "conversations/chat", business: @conversation.business, conversation: @conversation, message: Message.new%>
    <% else %>
    <p>please select your conversation</p>
    <% end %>
  </div>
</div>

