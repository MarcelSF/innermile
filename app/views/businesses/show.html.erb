<h1><%= @business.name %></h1>
<p><em><%= @business.address %></em></p>


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Recent Posts</h2>
      <p><%= @business.name %> has <%= pluralize @business.posts.size, "recent post" %></p>
      <% if current_user == @business.user %>
        <div id="posts">
          <% if @business.posts.blank? %>
          <%# if policy(Post).create? %>
            Post and share updates for  <%= @business.name %>
          <% else %>
            <% @business.posts.each do |post| %>
              <p><%= post.content %></p>
            <% end %>
          <% end %>
        </div>

        <h2 class="text-center">Create a post</h2>
        <p class="text-center">----------</p>
        <%= simple_form_for([@business, @post]) do |f| %>
           <div class="form-inputs">
            <%= f.input :content %>
            <%= f.input :post_image, as: :file %>
           </div>
           <div class="form-actions mb-2">
            <%= f.button :submit, "Create Post", class: "btn btn-flat" %>
           </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
