<h1><%= @business.name %></h1>
<p><em><%= @business.short_bio %></em></p>
<p><em><%= @business.address %></em></p>
<p><em><%= @business.opening_hours %></em></p>
<p><em><%= @business.telephone %></em></p>
<p><em><%= @business.email %></em></p>
<p><em><%= @business.website_url %></em></p>
<p><em><%= @business.owner_name %></em></p>
<p><em><%= @business.owner_bio %></em></p>
<p><em><%= @business.long_bio %></em></p>

<% if !@user.businesses.include?(@business) %>
  <% if !@user.bookmarked_businesses.include?(@business) %>
    <i class="far fa-bookmark"></i>
    <%= link_to "Add to bookmarks", business_bookmarks_path(@business), method: :post %>
  <% else %>
    <i class="fas fa-bookmark"></i>
    <%= link_to "Remove from bookmarks", bookmark_path(@bookmark), method: :delete  %>
  <% end %>
<% end %>

<div class="container">
 <div class="row justify-content-center">
  <div class="col-6">
    <h1 class="text-center">Recent Posts</h1>
    <p  class="text-center"><%= @business.name %> has <%= pluralize @business.posts.size, "recent post" %></p>
    <hr>
    <div id="posts">
      <% if @business.posts.blank? %>
      <%# if policy(Post).create? %>
        <p> <%= @business.name %> has no posts yet</p>
      <% else %>
        <% @business.posts.each do |p| %>
          <%= render partial: 'posts/post', locals: { post: p } %>
        <% end %>
      <% end %>
    </div>
    <hr>
    <% if current_user == @business.user %>
      <h2 class="text-center">Create a post</h2>
      <p class="text-center">----------</p>
      <%= simple_form_for([@business, @post]) do |f| %>
        <div class="form-inputs">
          <%= f.input :content %>
          <%= f.input :post_image, as: :file %>
        </div>
        <div class="form-actions mb-2">
          <%= f.button :submit, "Create Post", class: "btn btn-flat" %>
        </div>
        <hr>

      <% end %>
    <% end %>

    </div>
  </div>
</div>


