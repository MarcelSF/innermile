<div class="container mt-5">
  <p><strong>Bookmarked businesses</strong></p>
  <% @categories.each do |category| %>
    <%= link_to category.name, user_bookmarks_path(query: @category, category: category.name), class: "category_btn #{"btn_active" if @category && @category.name == category.name}" %>
  <% end %>
  <div id="list">
    <% if @businesses.present? %>
    <div class="row flex-row flex-nowrap" id="list-items">
      <% @businesses.each do |business| %>
        <div class="col-3">
          <%= render partial: 'businesses/business_card', locals: { business: business } %>
        </div>
      <% end %>
    </div>
    <p>Go and find more busineseses in <%= link_to @category.name, businesses_path(query: @address, category: @category.name) %> !</p>
    <% else %>
    <p>No bookmarks yet! Go and find busineseses for your <%= link_to @category.name, businesses_path(query: @address, category: @category.name) %> category!</p>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <p class="text-center"><strong>Recent Posts from your bookmarked businesses</strong></p>
      <hr>
      <div class="posts">
        <% if @posts %>
          <div class="container">
            <% @posts.each do |post| %>
              <div class="post shadow-sm bg-white">
                <%= render partial: 'posts/post', locals: { post: post } %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
